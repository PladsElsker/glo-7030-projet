{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Download dataset",
            "type": "debugpy",
            "request": "launch",
            "module": "download_datasets",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-o", "/mnt/data/plads/how2sign"
            ]
        },
        {
            "name": "Train SignTerpreter",
            "type": "debugpy",
            "request": "launch",
            "module": "core.train",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--dataset", "/mnt/data/plads/open-asl-dwpose", "--save-checkpoint-directory", "./trained_models", "--batch-size", "1"
            ]
        }
    ]
}
